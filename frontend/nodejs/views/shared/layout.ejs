<!DOCTYPE html>
<html>

<head>
    <title>
        <%= appName %>
    </title>
    <link rel="stylesheet" type="text/css" href="/css/main.css" />

    <!-- Include JQuery from CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Include Marked.js from CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/marked/5.1.1/marked.min.js"></script>

    <!-- Include CodeMirror's CSS and JavaScript from CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/codemirror.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/theme/dracula.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/mode/javascript/javascript.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/mode/clike/clike.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/mode/python/python.min.js"></script>
    
    <!-- Include SweetAlert2 Modal from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Include Bootstrap's CSS and JavaScript from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</head>

<body>
    <!-- Updated Bootstrap Navbar with dynamic dropdowns and Home first -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><%= appName %></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <% if (navLinks && navLinks.includes('/')) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                    <% } %>
                    <% 
                        // Group remaining routes by the first segment
                        let groups = {};
                        if (navLinks && navLinks.length) {
                            navLinks.forEach(link => {
                                if (link === '/') return; // Home already rendered
                                let segments = link.split('/').filter(Boolean);
                                let mainKey = '/' + segments[0];
                                groups[mainKey] = groups[mainKey] || [];
                                groups[mainKey].push(link);
                            });
                        }
                        Object.keys(groups).forEach(function(key) {
                            let items = groups[key];
                            if (items.length === 1) { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="<%= key %>">
                                        <%= key.substring(1).charAt(0).toUpperCase() + key.substring(1).slice(1) %>
                                    </a>
                                </li>
                            <% } else { 
                                let hasMain = items.includes(key); %>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="<%= hasMain ? key : '#' %>" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <%= key.substring(1).charAt(0).toUpperCase() + key.substring(1).slice(1) %>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <% if (hasMain) { %>
                                            <li><a class="dropdown-item" href="<%= key %>">Overview</a></li>
                                        <% } %>
                                        <% items.forEach(function(item) {
                                            if (item === key) return;
                                            let subLabel = item.replace(key + '/', '');
                                        %>
                                            <li><a class="dropdown-item" href="<%= item %>">
                                                <%= subLabel.charAt(0).toUpperCase() + subLabel.slice(1) %>
                                            </a></li>
                                        <% }); %>
                                    </ul>
                                </li>
                            <% }
                        });
                    %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main page content -->
    <div class="container mt-4 pb-4">
        <%- body %>
    </div>

    <!-- 
    -  Scripts that run on every page
    -  > appendToHeading(): Allows adding any text to the document <title> 
    -->
    <script>

        /*
        * Can be ran from any .html page that is including this layout.
        * Allows updating the <title> of the current webpage to add any custom text on the end.
        */
        function appendToHeading(heading) {
            document.title = `${document.title} | ${heading}`;
        }

    </script>

    <!-- Optional page-specific scripts -->
    <% if (typeof scripts !=='undefined' ) { %>
        <%- scripts %>
    <% } %>

    <!-- Script to highlight active nav-link -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var currentPath = window.location.pathname;
            document.querySelectorAll('.navbar-nav a').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>

</html>